<div class="resources flexrow">
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Imago'}}</label>
    <input type="number" name="system.mystical.imago.value" value="{{system.mystical.imago.value}}" data-dtype="Number"/>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.AbyssMark'}}</label>
    <input type="number" name="system.mystical.abyssMark.value" value="{{system.mystical.abyssMark.value}}" data-dtype="Number"/>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.XenomagoGleam'}}</label>
    <input type="number" name="system.xenomagoGleam.value" value="{{system.xenomagoGleam.value}}" data-dtype="Number"/>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Tricks'}}</label>
    <div class="resource-content">
      <input type="number" name="system.tricks.value" value="{{system.tricks.value}}" data-dtype="Number"/>
      <span> / </span>
      <input type="number" name="system.tricks.max" value="{{system.tricks.max}}" data-dtype="Number"/>
    </div>
  </div>
</div>

<div class="item-block">
  <div class="block-header">
  <h2>{{localize 'ARCHETERICALITE.MysticalAbilityPlural'}}</h2>
    <a class="item-add item-create" title="Create item" data-type="ability"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
  </div>
  <ol class="items-list">
    {{#each ability as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          </div>
          <h4>{{item.name}} <span class="rank" style="--rank:{{item.system.rank}}"></h4>
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>

<div class="item-block">
  <div class="block-header">
    <h2>{{localize 'ARCHETERICALITE.MetamorphosisPlural'}}</h2>
    <a class="item-add item-create" title="Create item" data-type="metamorphosis"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
  </div>
  <ol class="items-list">
    {{#each metamorphosis as |item id|}}
