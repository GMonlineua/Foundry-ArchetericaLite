<div class="resources flexrow">
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Accommodation'}}</label>
    <input type="number" name="system.riches.accommodation" value="{{system.riches.accommodation}}" data-dtype="Number"/>
  </div>

  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Profit'}}</label>
    <input type="number" name="system.riches.profit" value="{{system.riches.profit}}" data-dtype="Number"/>
  </div>

  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Marks'}}</label>
    <input type="number" name="system.riches.marks" value="{{system.riches.marks}}" data-dtype="Number"/>
  </div>

  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Zloty'}}</label>
    <input type="number" name="system.riches.zloty" value="{{system.riches.zloty}}" data-dtype="Number"/>
  </div>
</div>

<div class="item-block grid grid-2col">
  <div>
    <div class="block-header">
      <h2>{{localize 'ITEM.TypeWeapon'}}</h2>
      <a class="item-add item-create" title="Create item" data-type="weapon"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
    </div>
    <ol class="items-list">
      {{#each weapon as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <div>
    <div class="block-header">
      <h2>{{localize 'ITEM.TypeProtection'}}</h2>
      <a class="item-add item-create" title="Create item" data-type="protection"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
    </div>
    <ol class="items-list">
      {{#each protection as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <div>
    <div class="block-header">
      <h2>{{localize 'ARCHETERICALITE.LootPlural'}}</h2>
      <a class="item-add item-create" title="Create item" data-type="loot"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
    </div>
    <ol class="items-list">
      {{#each loot as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <div>
    <h2>{{localize 'ARCHETERICALITE.Riches'}}</h2>
    {{editor system.riches.info target="system.riches.info" button=true owner=owner editable=editable}}
  </div>

</div>
