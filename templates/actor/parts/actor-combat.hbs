<div class="resources flexrow">
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.CombatExperience'}}:</label>
    <div class="resource-content">
      <input type="number" name="system.combatExp.value" value="{{system.combatExp.value}}" data-dtype="Number"/>
      <span> / </span>
      <input type="number" name="system.combatExp.max" value="{{system.combatExp.max}}" data-dtype="Number"/>
    </div>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Fatum'}}:</label>
    <div class="resource-content">
      <i class="fas fa-plus"></i>
      <input type="number" name="system.fatum.plus" value="{{system.fatum.plus}}" data-dtype="Number"/>
      <i class="fas fa-minus"></i>
      <input type="number" name="system.fatum.minus" value="{{system.fatum.minus}}" data-dtype="Number"/>
    </div>
  </div>
</div>

<div class="resources flexrow">
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Brawl'}}:</label>
    <input type="number" name="system.combat.brawl" value="{{system.combat.brawl}}" data-dtype="Number"/>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Fencing'}}:</label>
    <input type="number" name="system.combat.fencing" value="{{system.combat.fencing}}" data-dtype="Number"/>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Firearms'}}:</label>
    <input type="number" name="system.combat.firearms" value="{{system.combat.firearms}}" data-dtype="Number"/>
  </div>
  <div class="resource">
    <label class="resource-label">{{localize 'ARCHETERICALITE.Throwing'}}:</label>
    <input type="number" name="system.combat.throwing" value="{{system.combat.throwing}}" data-dtype="Number"/>
  </div>
</div>

<div class="item-block">
  <h2>{{localize 'ARCHETERICALITE.CombatTalentPlural'}}</h2>
  <ol class="items-list">
    {{#each comtals as |comtals comtalRank|}}
      <li class="item flexrow items-header">
        <div class="item-name">{{localize 'ARCHETERICALITE.Rank'}} <span class="rank" style="--rank:{{comtalRank}}"></span></div>
        <div class="item-controls">
          <a class="item-control item-create" title="Create item" data-type="comtal" data-comtal-rank="{{comtalRank}}"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
        </div>
      </li>
      {{#each comtals as |item id|}}
        <li class="item" data-item-id="{{item._id}}">
          <div class="item-name flexrow">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    {{/each}}
  </ol>
</div>
