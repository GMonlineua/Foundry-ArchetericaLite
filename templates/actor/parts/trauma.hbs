<div class="item-block">
  <div class="block-header">
    <h2>{{localize 'ARCHETERICALITE.TraumaPlural'}}</h2>
    <a class="item-add item-create" title="Create item" data-type="trauma"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
  </div>
  <ol class="items-list">
    {{#each trauma as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <a class="item-image rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize 'ARCHETERICALITE.EditItem'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'ARCHETERICALITE.DeleteItem'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
