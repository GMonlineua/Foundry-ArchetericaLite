<div class="narrative-block">
  <div class="talentsPyramid">
    <h4>{{localize 'ARCHETERICALITE.TalentsPyramid'}}</h4>
    <div class="resource">
      <input type="number" name="system.talentsPyramid.rank3" value="{{system.talentsPyramid.rank3}}" data-dtype="Number"/>
      <label for="system.talentsPyramid.rank3" class="resource-label">{{localize 'ARCHETERICALITE.Rank'}} III</label>
    </div>
    <div class="resource">
      <input type="number" name="system.talentsPyramid.rank2" value="{{system.talentsPyramid.rank2}}" data-dtype="Number"/>
      <label for="system.talentsPyramid.rank2" class="resource-label">{{localize 'ARCHETERICALITE.Rank'}} II</label>
    </div>
    <div class="resource">
      <input type="number" name="system.talentsPyramid.rank1" value="{{system.talentsPyramid.rank1}}" data-dtype="Number"/>
      <label for="system.talentsPyramid.rank1" class="resource-label">{{localize 'ARCHETERICALITE.Rank'}} I</label>
    </div>
  </div>

  <div>
    <div class="grid grid-2col">
      <div class="item-block">
        <div class="block-header">
          <h2>{{localize 'ARCHETERICALITE.BiographyType'}}</h2>
          <a class="item-add item-create" title="Create item" data-type="biography"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
        </div>
        <ol class="items-list">
          {{#each biography as |item id|}}
            <li class="item" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image">
                  <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4>{{item.name}}</h4>
              </div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
        </ol>
      </div>

      <div class="item-block">
        <div class="block-header">
          <h2>{{localize 'ARCHETERICALITE.NegativePlural'}}</h2>
          <a class="item-add item-create" title="Create item" data-type="negative"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
        </div>
        <ol class="items-list">
          {{#each negative as |item id|}}
            <li class="item" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image">
                  <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4>{{item.name}} <span class="rank" style="--rank:{{item.system.rank}}"></span> (-{{item.system.minus}})</h4>
              </div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
          {{/each}}
        </ol>
      </div>

    </div>

    <div class="item-block">
      <div class="block-header">
        <h2>{{localize 'ARCHETERICALITE.AttributePlural'}}</h2>
        <a class="item-add item-create" title="Create item" data-type="attribute"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
      </div>
      <div class="grid grid-2col">
      {{#each attribute as |item id|}}
          <div class="item" data-item-id="{{item._id}}">
            <div class="item-header">
              <div class="item-name">
                <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
                <h3>{{item.name}} (+{{system.pluss}})</h3>
              </div>
              <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </div>
            <ul class="talent-list">
              {{#if system.talent1.active}}
                <li name="system.talent1">
                  <span>{{system.talent1.name}} </span>
                  <span class="rank" style="--rank:{{system.talent1.rank}}"></span>
                  {{#if system.talent1.upheaval}}
                    ({{localize 'ARCHETERICALITE.AvailableUpheaval'}})
                  {{/if}}
                </li>
              {{/if}}

              {{#if system.talent2.active}}
                <li name="system.talent2">
                   <span>{{system.talent2.name}} </span>
                  <span class="rank" style="--rank:{{system.talent2.rank}}"></span>
                  {{#if system.talent2.upheaval}}
                    ({{localize 'ARCHETERICALITE.AvailableUpheaval'}})
                  {{/if}}
                </li>
              {{/if}}

              {{#if system.talent3.active}}
                <li name="system.talent3">
                   <span>{{system.talent3.name}} </span>
                  <span class="rank" style="--rank:{{system.talent3.rank}}"></span>
                  {{#if system.talent3.upheaval}}
                    ({{localize 'ARCHETERICALITE.AvailableUpheaval'}})
                  {{/if}}
                </li>
              {{/if}}

              {{#if system.talent4.active}}
                <li name="system.talent4">
                   <span>{{system.talent4.name}} </span>
                  <span class="rank" style="--rank:{{system.talent4.rank}}"></span>
                  {{#if system.talent4.upheaval}}
                    ({{localize 'ARCHETERICALITE.AvailableUpheaval'}})
                  {{/if}}
                </li>
              {{/if}}

              {{#if system.talent5.active}}
                <li name="system.talent5">
                   <span>{{system.talent5.name}} </span>
                  <span class="rank" style="--rank:{{system.talent5.rank}}"></span>
                  {{#if system.talent5.upheaval}}
                    ({{localize 'ARCHETERICALITE.AvailableUpheaval'}})
                  {{/if}}
                </li>
              {{/if}}

              {{#if system.talent6.active}}
                <li name="system.talent6">
                   <span>{{system.talent6.name}} </span>
                  <span class="rank" style="--rank:{{system.talent6.rank}}"></span>
                  {{#if system.talent6.upheaval}}
                    ({{localize 'ARCHETERICALITE.AvailableUpheaval'}})
                  {{/if}}
                </li>
              {{/if}}
            </ul>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
