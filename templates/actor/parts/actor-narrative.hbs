<div class="grid grid-2col">
  <div class="item-block">
    <div class="block-header">
      <h2>{{localize 'ARCHETERICALITE.BiographyType'}}</h2>
      <a class="item-add item-create" title="Create item" data-type="biography"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
    </div>
    <ol class="items-list">
      {{#each biography as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <div class="item-block">
    <div class="block-header">
      <h2>{{localize 'ARCHETERICALITE.NegativePlural'}}</h2>
      <a class="item-add item-create" title="Create item" data-type="negative"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
    </div>
    <ol class="items-list">
      {{#each negative as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}} <span class="rank" style="--rank:{{item.system.rank}}"> (-{{item.system.minus}})</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

</div>

<div class="item-block">
  <div class="block-header">
    <h2>{{localize 'ARCHETERICALITE.AttributePlural'}}</h2>
    <a class="item-add item-create" title="Create item" data-type="attribute"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
  </div>
  <div class="grid grid-2col">
   {{#each attribute as |item id|}}
      <div class="item" data-item-id="{{item._id}}">
        <div class="item-header">
          <div class="item-name">
            <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            <h3>{{item.name}} (+{{item.system.plus}})</h3>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </div>
        <div>
          {{editor item.system.description target="item.system.description" rollData=rollData button=true owner=owner editable=none}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
