<div class="item-block">
    <div class="block-header">
        <h2>{{localize 'ARCHETERICALITE.NegativePlural'}}</h2>
        <a class="item-add item-create" title="Create item" data-type="negative"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
    </div>
    <ol class="items-list">
        {{#each negative as |item id|}}
        <li class="item" data-item-id="{{item._id}}">
            <div class="item-name">
            <div class="item-image">
                <a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            </div>
            <h4>{{item.name}} <span class="rank" style="--rank:{{item.system.rank}}"></span> (-{{item.system.minus}})</h4>
            </div>
            <div class="item-controls">
            <a class="item-control item-edit" title="{{localize 'ARCHETERICALITE.EditItem'}}"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="{{localize 'ARCHETERICALITE.DeleteItem'}}"><i class="fas fa-trash"></i></a>
            </div>
        </li>
        {{/each}}
    </ol>
</div>
