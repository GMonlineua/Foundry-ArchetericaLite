<div class="item-block">
  <h2>{{localize 'ARCHETERICALITE.CombatTalentPlural'}}</h2>
  <ol class="items-list">
    {{#each comtals as |comtals comtalRank|}}
      <li class="item flexrow items-header">
        <div class="item-name">{{localize 'ARCHETERICALITE.Rank'}} <span class="rank" style="--rank:{{comtalRank}}"></span></div>
        <div class="item-controls">
          <a class="item-control item-create" title="Create item" data-type="comtal" data-comtal-rank="{{comtalRank}}"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
        </div>
      </li>
      {{#each comtals as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-name flexrow">
            <a class="item-image rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
            <h4>{{item.name}}</h4>
          </div>
          {{#if system.uses.max}}
            <div class="item-uses">
              <span>{{system.uses.value}}</span>
              <span> / </span>
              <span>{{system.uses.max}}</span>
            </div>
          {{/if}}
          <div class="item-controls">
            <a class="item-control item-edit" title="{{localize 'ARCHETERICALITE.EditItem'}}"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="{{localize 'ARCHETERICALITE.DeleteItem'}}"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    {{/each}}
  </ol>
</div>
