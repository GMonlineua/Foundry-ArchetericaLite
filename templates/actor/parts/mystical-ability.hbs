<div class="item-block">
  <div class="block-header">
  <h2>{{localize 'ARCHETERICALITE.MysticalAbilityPlural'}}</h2>
      <a class="item-add item-create" title="Create item" data-type="ability"><i class="fas fa-plus"></i>{{localize 'ARCHETERICALITE.Add'}}</a>
  </div>
  <ol class="items-list">
      {{#each ability as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <a class="item-image rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          <h4>{{item.name}} <span class="rank" style="--rank:{{item.system.rank}}"></span></h4>
        </div>
        {{#if system.uses.max}}
          <div class="item-uses">
            <span>{{system.uses.value}}</span>
            <span> / </span>
            <span>{{system.uses.max}}</span>
          </div>
        {{/if}}
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize 'ARCHETERICALITE.EditItem'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'ARCHETERICALITE.DeleteItem'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
  </ol>
</div>
